<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.view.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_card_height"
            android:layout_margin="@dimen/search_card_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="@dimen/search_card_height"
                    android:layout_height="@dimen/search_card_height"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/search_card_margin"
                    android:layout_marginStart="@dimen/search_card_margin"
                    android:padding="12dp"
                    android:src="@drawable/ic_search_24dp"
                    android:tint="@color/colorGrey"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/micButton"
                    android:layout_width="@dimen/search_card_height"
                    android:layout_height="@dimen/search_card_height"
                    android:layout_toStartOf="@+id/menuButton"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_mic_24dp"
                    android:tint="@color/colorGrey"
                    tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />

                <ImageView
                    android:id="@+id/menuButton"
                    android:layout_width="@dimen/search_card_height"
                    android:layout_height="@dimen/search_card_height"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_more_vert_24dp"
                    android:tint="@color/colorGrey"
                    tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.design.widget.AppBarLayout>
    
    <fragment
        android:id="@+id/photoFragment"
        android:name="live.senya.garrely.ui.photogrid.view.PhotoGridFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>